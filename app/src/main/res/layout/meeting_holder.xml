<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageHolder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toStartOf="@id/informationHolder"
        ></ImageView>

    <TextView
        android:id="@+id/informationHolder"
        android:text="15:00 - Robert"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/imageHolder"
        android:layout_alignTop="@+id/imageHolder">
    </TextView>

    <TextView
        android:id="@+id/emailHolder"
        android:text="robert@plifplouf.fr, bernard@plafplif.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingBottom="5dp"
        android:layout_toEndOf="@+id/imageHolder"
        android:layout_alignBottom="@+id/imageHolder"
        android:maxLength="45"
        android:maxLines="1">
    </TextView>

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_delete_white_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/imageHolder"
        android:layout_alignTop="@+id/imageHolder">
    </ImageButton>


</RelativeLayout>